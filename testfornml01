# テスト対象のPythonプログラムを実行
python3 nml01

# 終了ステータスを確認
if [ $? -eq 0 ]; then
    echo "Exit status: OK"
else
    echo "Exit status: Failed"
fi

# 標準出力に指定した文字列が含まれているかを確認
if grep -q "you" OUTPUT.txt; then
    echo "OK"
else
    echo "Failed: 指定した文字列が見つかりません"
fi
